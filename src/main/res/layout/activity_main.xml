                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brygada1918_medium"
                android:text="H azodijoefidhaazeopfh ndao^ziduazôiduaz oizadapzodazoidjaz azoiduazoiduazoidu azdiazdoidzuoidazupouadz upaiozdhdhazpuiodhpaziuduhpaziudh azdipuazhduazd"
                android:textColor="#999"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/italianno_regular"
                android:text="Ingridients : "
                android:textColor="@color/black"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/txtIngridients"
                android:layout_width="match_parent"
